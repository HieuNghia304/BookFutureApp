<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="7dp"
    android:weightSum="5">

    <ImageView
        android:id="@+id/imageBook"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_weight="2"
        android:scaleType="fitXY"
        android:src="@drawable/sach" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:text="Cẩm Nang Tiếng Anh"
                android:textStyle="bold"
                android:textSize="23dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="15dp"
                    android:text="68.000"
                    android:textStyle="bold"
                    android:textColor="#FF0303"
                    android:textSize="23dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VND"
                    android:textStyle="bold"
                    android:textColor="#FF0303"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/updateBookCart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/updated" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/subtractionCart"
                    android:layout_width="48dp"
                    android:layout_height="55dp"
                    android:backgroundTint="#F8F4F4"
                    android:text="-"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/numberBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                  />

                <Button
                    android:id="@+id/summationCart"
                    android:layout_width="44dp"
                    android:layout_height="55dp"
                    android:backgroundTint="#F8F4F4"
                    android:text="+"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/removeBookCart"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/delete" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>